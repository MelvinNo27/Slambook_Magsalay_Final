<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f9f1e4"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="Back"
            android:src="@drawable/baseline_arrow_back_24" />

        <TextView
            android:id="@+id/viewHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View"
            android:layout_marginStart="120dp"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/profilePictureDisplay"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:src="@drawable/avatar"
        android:contentDescription="Profile Picture"
        android:scaleType="centerCrop"
        android:background="@drawable/border_circle"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <!-- Full Name -->
        <TextView
            android:id="@+id/fullNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/fullNameText"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:background="@drawable/border"
            android:hint="Full Name"
            android:padding="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nickname:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/nicknameText"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:background="@drawable/border"
            android:padding="10dp"
            android:layout_marginStart="12dp"
            android:hint="Nickname" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/addressText"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:background="@drawable/border"
            android:layout_marginStart="23dp"
            android:padding="10dp"
            android:hint="Address" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/emailText"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:background="@drawable/border"
            android:layout_marginStart="40dp"
            android:padding="10dp"
            android:hint="Email" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Age"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@drawable/border"
            android:layout_marginStart="50dp"
            android:padding="10dp"
            android:hint="Age" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!-- Gender -->
        <TextView
            android:id="@+id/genderLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender:"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <RadioGroup
            android:id="@+id/genderGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="8dp">
            <RadioButton
                android:id="@+id/maleRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Male" />
            <RadioButton
                android:id="@+id/femaleRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Female" />

            <RadioButton
                android:id="@+id/otherRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Other" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <!-- Gender -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status:"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <RadioGroup
            android:id="@+id/Status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="8dp">
            <RadioButton
                android:id="@+id/singleRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Single" />
            <RadioButton
                android:id="@+id/marriedRadioButton"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="Married" />

            <RadioButton
                android:id="@+id/DivorcedRadioButton"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="Divorced " />

        </RadioGroup>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BIRTH OF DATE"
        android:textStyle="bold"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:weightSum="3">


        <TextView
            android:id="@+id/monthSpinner"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:hint="Month"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@drawable/border" />

        <TextView
            android:id="@+id/daySpinner"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:hint="Day"
            android:gravity="center"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_weight="0.8"
            android:background="@drawable/border" />

        <TextView
            android:id="@+id/yearSpinner"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:hint="Year"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/border" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/HobbiesIconDisplay"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/download"
            android:layout_marginEnd="20dp"
            android:contentDescription="Favorite Hobbies"
            android:layout_marginTop="16dp" />

        <!-- Favorite Icon -->
        <ImageView
            android:id="@+id/favoriteIconDisplay"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/favorite"
            android:contentDescription="Favorite" />

        <!-- Confused Icon -->
        <ImageView
            android:id="@+id/confusedIconDisplay"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/questions"
            android:contentDescription="Confused"
            android:layout_marginTop="16dp" />
    </LinearLayout>

    <Button
        android:id="@+id/Update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>

</LinearLayout>